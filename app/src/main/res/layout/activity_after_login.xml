<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".After_login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/toptextview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_bold"
            android:gravity="center"
            android:text="For learners"
            android:layout_marginTop="65dp"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <RelativeLayout
            android:id="@+id/seg1x"
            android:layout_width="380sp"
            android:layout_height="115dp"
            android:layout_marginTop="12sp"
            android:background="@drawable/roundedcorner"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toptextview1"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/course1_seg31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/sf_ui_display_light"
                android:gravity="center"
                android:textColor="#3b3745"
                android:text="Explore Courses"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/seg_sub21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="72sp"
                android:text="You can access the courses those are created by others"
                android:textColor="#3b3745"
                android:textSize="12sp" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/seg2a"
            android:layout_width="380sp"
            android:layout_height="115dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bluerounded"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seg1x"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/course1_seg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginRight="134dp"
                android:fontFamily="@font/sf_ui_display_light"
                android:gravity="center"
                android:textColor="#3b3745"
                android:text="Learn from us"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/seg_sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="72sp"
                android:text="You can access our courses "
                android:textColor="#3b3745"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/toptextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/sf_ui_display_bold"
            android:gravity="center"
            android:text="For Instructors"
            android:textSize="30sp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="205dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seg2a"
            android:layout_marginRight="205dp"
            android:layout_marginLeft="45dp" />

        <RelativeLayout
            android:id="@+id/seg2ab"
            android:layout_width="380sp"
            android:layout_height="115dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bluerounded"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toptextview2"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/course1_seg51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginRight="134dp"
                android:fontFamily="@font/sf_ui_display_light"
                android:gravity="center"
                android:textColor="#3b3745"
                android:text="Create courses"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/seg_sub41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36sp"
                android:layout_marginTop="72sp"
                android:text="You can create course here "
                android:textColor="#3b3745"
                android:textSize="12sp" />

        </RelativeLayout>


        <Button
            android:id="@+id/logout"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/bluerounded"
            android:gravity="center"
            android:onClick="logout"
            android:text="Logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seg2ab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>